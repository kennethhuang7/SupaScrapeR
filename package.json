{
  "name": "supascraper",
  "private": true,
  "version": "2.0.4",
  "type": "module",
  "main": "electron/main.js",
  "description": "Reddit data collection and analysis tool",
  "author": "SupaScrapeR",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "set NODE_ENV=production && electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && set NODE_ENV=development && electron .\"",
    "dist": "vite build && electron-builder"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "@radix-ui/react-accordion": "^1.2.11",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@supabase/supabase-js": "^2.58.0",
    "@tanstack/react-query": "^5.83.0",
    "@types/react-datepicker": "^7.0.0",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "discord-rpc": "^4.0.1",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.462.0",
    "react": "^18.3.1",
    "react-datepicker": "^8.7.0",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.61.1",
    "react-router-dom": "^6.30.1",
    "recharts": "^2.15.4",
    "sonner": "^1.7.4",
    "tailwind-merge": "^2.6.0",
    "update-electron-app": "^3.1.1",
    "zod": "^3.25.76",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.18.6",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.2",
    "vite": "^5.4.20",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.supascraper.app",
    "productName": "SupaScrapeR",
    "publish": {
      "provider": "github",
      "owner": "kennethhuang7",
      "repo": "SupaScrapeR"
    },
    "directories": {
      "output": "dist-electron",
      "buildResources": "installer"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "assets/**/*",
      "scripts/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "node_modules/electron-store/**/*",
      "node_modules/discord-rpc/**/*",
      "scripts/**/*"
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "SupaScrapeR",
      "perMachine": false,
      "runAfterFinish": true,
      "installerIcon": "assets/supascraper-icon.ico",
      "uninstallerIcon": "assets/supascraper-icon.ico",
      "deleteAppDataOnUninstall": false,
      "include": "installer/installer.nsh"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/supascraper-icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/supascraper-icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/supascraper-icon.png"
    }
  }
}