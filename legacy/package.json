{
  "name": "supascraper",
  "version": "2.0.0",
  "description": "Advanced Reddit Data Collection Tool",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac"
  },
  "devDependencies": {
    "electron": "^27.3.11",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.kennethhuang.supascraper",
    "productName": "SupaScrapeR",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/supascraper-icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/supascraper-icon.icns"
    }
  }
}
